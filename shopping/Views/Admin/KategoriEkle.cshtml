@model shopping.Models.ViewModel
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (TempData["KategoriMevcut"] != null)
{

    <script>
        Swal.fire("Kategori", "Mevcut", "error")
    </script>
}
@if (TempData["KategoriEklendi"] != null)
{

    <script>
        Swal.fire("Kategori", "Eklendi", "success")
    </script>
}


<div class="content-wthree2">
    <div class="container">
        <p></p>
        @using (Html.BeginForm("KategoriEkle", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                <label for="recipient-name" class="col-form-label ">Kategori İsmi:</label>
                <input type="text" class="form-control" id="recipient-name" name="adi" required="">
            </div>
            <div class="form-group">
                <label for="recipient-name" class="col-form-label">Kategori Kodu:</label>
                <input type="text" class="form-control" id="recipient-name" name="etiket" required="">
            </div>
            <p></p>
            <div class="content-wthree2">
                <div class="grid-w3layouts1">
                    <div class="w3-agile1">
                        <label class="rating">Kategori Aktiflik<span>*</span></label>
                        <ul>
                            <li>
                                <input type="radio" id="a-option" value="true" name="aktif">
                                <label for="a-option">Aktif</label>
                                <div class="check"></div>
                            </li>
                            <li>
                                <input type="radio" id="b-option" value="false" name="aktif" checked>
                                <label for="b-option">Pasif</label>
                                <div class="check"><div class="inside"></div></div>
                            </li>
                        </ul>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>


            <p></p>

            <button type="submit" class="btn btn-primary">Kategori Ekle</button>
            <div class="clear"> </div>
            <p></p>
        }

    </div>
</div>