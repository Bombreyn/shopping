                            </div>
                        </div>
                    }

                    @if (Model.resim6 == null || Model.resim6 == "")
                    {

                    }
                    else
                    {
                        <div class="shop text-center">
                            <div class="img-holder">
                                <img src="@Model.resim6" alt="image description" class="img-responsive">
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
